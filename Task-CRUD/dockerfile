# ---------- Stage 1: Build ----------
    FROM golang:1.23-alpine AS builder

    WORKDIR /app
    
    # Install git karena beberapa Go packages mungkin perlu ini
    RUN apk add --no-cache git
    
    COPY go.mod go.sum ./
    RUN go mod tidy
    
    COPY . .
    
    RUN go build -o main ./main.go
    
    # ---------- Stage 2: Runtime ----------
    FROM alpine:latest
    
    WORKDIR /app
    
    # Pastikan runtime Alpine bisa eksekusi Go binary dengan dep
    RUN apk add --no-cache ca-certificates
    
    COPY --from=builder /app/main .
    
    EXPOSE 8080
    
    CMD ["./main"]
    